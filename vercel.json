{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/index.js"
    },
    {
      "src": "/upload",
      "dest": "/client/build/index.html"
    },
    {
      "src": "/gallery",
      "dest": "/client/build/index.html"
    },
    {
      "src": "/login",
      "dest": "/client/build/index.html"
    },
    {
      "src": "/register",
      "dest": "/client/build/index.html"
    },
    {
      "src": "/admin",
      "dest": "/client/build/index.html"
    },
    {
      "src": "/qr-generator",
      "dest": "/client/build/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/client/build/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
